<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_ppt"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ppt_left"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ppt_left"
            android:layout_gravity="left" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:id="@+id/title"
                android:textColor="@color/hex_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="title" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:id="@+id/meeting_time"
                android:textColor="@color/hex_b3999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="meetingtime" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/hex_000000"
                android:textSize="13sp"
                android:id="@+id/ppt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_time"
                android:text="ppt_name" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/hex_b3999999"
                android:id="@+id/ppt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ppt_name"
                android:text="ppt_time" />

            <TextView
                android:textSize="13sp"
                android:textColor="@color/hex_b3999999"
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="author" />

            <ImageView
                android:id="@+id/ppt_downad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ppt_download"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>